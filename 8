#include <iostream>
using namespace std;
int main()
{
    int main();
    {
        float a = 0, b = 0;
        cin >> a >> b;

        switch (a > b)
        {
        case true:
        cout << "A > b" << endl;
        break;

        default:
        cout << "B > A" << endl;
        break;
        }

        system("pause");
    }
    return 0;
}

7.
#include <iostream>
using namespace std;


int main()
{
    double a, b, d;
    char c;
    cin >> a >> c >> b;
    double* p1 = &a;
    double* p2 = &b;
    char* p3 = &c;
    double* p4 = &d;
    switch (*p3) {
    case '+':
        *p4 = (*p1) + (*p2);
        break;
    case '-':
        *p4 = (*p1) - (*p2);
        break;
    case '/':
        *p4 = (*p1) / (*p2);
        break;
    case '*':
        *p4 = (*p1) * (*p2);
        break;
    }
    cout << *p4;
    return 0;
}

8/
#include <iostream>
#include <ctime>
using namespace std;

int main()
{
    srand((int)time(0));
    int n, sum = 0;
    cout << "n="; cin >> n;

    int* a = new int[n];

    for (int* pa = a; pa < a + n; pa++)
    {
        *pa = rand() % 10;
        sum += *pa;
        cout << *pa << " ";
    }
    cout << "\nsum=" << sum << "\n";
    delete[]a;
    system("pause");
    return 0;
}

	
