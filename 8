4.int power(int base, int exponent) 
{
    if(exponent == 0) 
        return 1;
    else return base * power(base, exponent - 1); 
}

5.
#include
using namespace std;

int sum(int a, int b) {
    if(a + 1 >= b) return 0;
    int c = a + 1;
    return c + sum(a+1, b);
}

int main() {
    int a, b, c, summa;
    cin >> a >> b;
    if(a > b) {
        c = a;
        a = b;
        b = c;
    }
    summa = sum(a,b);
    cout << summa << endl;
    return 0;
}

6.int searchMin(int* massiv, int massivSize, int startIndex, int& min)
{
    int localMin = 0;
   
    
    if (startIndex + 9 == massivSize)
    {
        return 0;
    }
    
    
    for (int i = startIndex; i < startIndex + 10; i++)
    {
        localMin += massiv[i];
    }
    if (localMin < min) 
    {
        min = localMin;
    }
    return searchMin(massiv, massivSize, startIndex + 1, min);
}

